#include <stdio.h>

int main()
{
 char a='k';
 printf("ASCII VALUE OF%c is %d\n",a,a);
 char b='a';
 printf("ASCII VALUE OF%c is %d\n",b,b);
 char c='r';
 printf("ASCII VALUE OF%c is %d\n",c,c);
 char d='u';
 printf("ASCII VALUE OF%c is %d\n",d,d);
 char e='n';
 printf("ASCII VALUE OF%c is %d\n",e,e);
 char f='s';
 printf("ASCII VALUE OF%c is %d\n",f,f);
 char g='t';
 printf("ASCII VALUE OF%c is %d\n",g,g);
 char j='h';
 printf("ASCII VALUE OF%c is %d\n",j,j);
 char h='l';
 printf("ASCII VALUE OF%c is %d\n",h,h);
 char i='i';
 printf("ASCII VALUE OF%c is %d\n",i,i);
 
}


#include <stdio.h>

int main(void) 
{

 unsigned char var;
	printf("Enter decimal value:");
	scanf("%d", &var);
	printf("var = %d\n", var);

	printf("Enter octal value:");
	scanf("%o", &var);
	printf("var = %o\n", var);

	printf("Enter hexadecimal value: ");
	scanf("%x", &var);
	printf("var = %x\n", var);

	return 0;
}


wap to the data types in c program.
#include <stdio.h>

int main()
{
   int a;
   char b;
   float c;
   printf("enter a value");      //print the inger value//
   scanf("%d",&a);               //scan the inger a value//
   printf("enter a character");  //print the character value//
   scanf(" %c",&b);              //scan the charactr value//
   printf("enter a value");       //print the float value//
   scanf("%f",&c);                //scan the float value//
   printf("%d\n%c\n%f\n",a,b,c);  //print all the data types//
   
}

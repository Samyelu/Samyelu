#include <stdio.h>
int main()
{  
     char sam[] = "samuel";
     int i = 0;
    for(i=0;i<=6;i++)
    {
        
    
        printf("The count the name is : %d  %s",sizeof(sam), sam);
    }
    
    
}


// -------amstrong number or not------//


#include <stdio.h>
int main()
{
    int n,rem,c,sum=0,temp;
    printf("enter the value:");
    scanf("%d",&n);
    temp=n;
    while(n>0)
    {
        rem=n%10;
        c=rem*rem*rem;
        sum=sum+c;
        n=n/10;
        if(n==sum)
        
        printf("amstrong number:");
        
        else
        
        printf("number not amstrong");
        
    }
}

//srting   concatenation with two strings//


#include<stdio.h>
#include<string.h>     //global declaration//
int main()
{
    char s1[20];     //declaring the string s1 size//
    char s2[30];     //declaring the string s2 size//
    printf("Enter  s1");
    scanf("%s",s1);
    printf("Enter s2");
    scanf("%s",s2);
    //strcat(s1,s2);       //declaring strng concatenation//
    printf("the concatenation the string is %s:",strcat(s1,s2));
    return 0;
}




